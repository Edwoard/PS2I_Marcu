<UserControl x:Class="Simulator.MyControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Simulator"
             mc:Ignorable="d" 
             d:DataContext="{x:Type local:ViewModel}"
             d:DesignHeight="1080" d:DesignWidth="1920">
    <StackPanel>
        <Button Command="{Binding AbortCommand}">S0 - Abort</Button>
        <Button Command="{Binding SetManualModeCommand}">S1 - Start - Manual</Button>
        <Button Command="{Binding AddSubstraceCommand}">S2 - Add Substrace</Button>
        <Button Command="{Binding AddCatalistCommand}">S3- Add Catalist</Button>
        <Button Command="{Binding NeutralizeCommand}">S4 - Neutralize</Button>
        <CheckBox Content="L+" IsChecked="{Binding LPlus}"></CheckBox>
        <CheckBox Content="L-" IsChecked="{Binding LMinus}"></CheckBox>
        <Label Content="{Binding ProcessState}"></Label>
    </StackPanel>
</UserControl>
